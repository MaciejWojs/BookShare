@model BookShare.Models.User

@{
    ViewData["Title"] = "Mój Profil";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Informacje o koncie</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@Model.Email</dd>
                    
                    <dt class="col-sm-4">Nazwa użytkownika:</dt>
                    <dd class="col-sm-8">@Model.UserName</dd>
                    
                    <dt class="col-sm-4">Saldo:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-success fs-6">@Model.Balance.ToString("C", new System.Globalization.CultureInfo("pl-PL"))</span>
                    </dd>
                    
                    <dt class="col-sm-4">Rola:</dt>
                    <dd class="col-sm-8">
                        <span class="badge @(Model.Role == BookShare.Models.UserRole.Administrator ? "bg-danger" : "bg-primary")">
                            @(Model.Role == BookShare.Models.UserRole.Administrator ? "Administrator" : "Użytkownik")
                        </span>
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5>Moje książki (@Model.UserBooks.Count)</h5>
            </div>
            <div class="card-body">
                @if (Model.UserBooks.Any())
                {
                    <div class="row">
                        @foreach (var userBook in Model.UserBooks.OrderByDescending(ub => ub.AcquiredAt))
                        {
                            <div class="col-md-6 mb-3">
                                <div class="card h-100">
                                    @if (!string.IsNullOrEmpty(userBook.Book.CoverImagePath))
                                    {
                                        <img src="@Url.Action("GetCoverImage", "Books", new { id = userBook.Book.Id })" class="card-img-top" alt="Okładka książki" style="height: 200px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <img src="https://upload.wikimedia.org/wikipedia/commons/a/ac/No_image_available.svg" class="card-img-top" alt="Brak okładki" style="height: 200px; object-fit: cover;" />
                                    }
                                    <div class="card-body">
                                        <h6 class="card-title">@userBook.Book.Title</h6>
                                        <p class="card-text">
                                            <small class="text-muted">
                                                <strong>Autor:</strong> @userBook.Book.Author<br>
                                                <strong>Kategoria:</strong> @(userBook.Book.Category?.Name ?? "Brak kategorii")<br>
                                                <strong>Zakupiona:</strong> @userBook.AcquiredAt.ToString("dd.MM.yyyy HH:mm")
                                            </small>
                                        </p>
                                        @if (!string.IsNullOrEmpty(userBook.Book.PdfFilePath))
                                        {
                                            <a asp-action="DownloadBook" asp-route-bookId="@userBook.Book.Id" class="btn btn-primary btn-sm">
                                                <i class="fas fa-download"></i> Pobierz PDF
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Brak pliku PDF</span>
                                        }
                                        <a asp-controller="Books" asp-action="Details" asp-route-id="@userBook.Book.Id" class="btn btn-outline-secondary btn-sm ms-2">
                                            Szczegóły
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <div class="text-muted">
                            <i class="fas fa-book fa-3x mb-3"></i>
                            <p>Nie masz jeszcze żadnych książek.</p>
                            <a asp-controller="Books" asp-action="Index" class="btn btn-primary">
                                Przejdź do sklepu
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-home"></i> Strona główna
    </a>
</div>