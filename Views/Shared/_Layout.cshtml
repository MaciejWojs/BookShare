@using Microsoft.AspNetCore.Identity

@inject UserManager<BookShare.Models.User> UserManager
@{
    var currentUser = await UserManager.GetUserAsync(User);
    if (currentUser != null)
    {
        Console.WriteLine("=== USER INFORMATION ===");
        Console.WriteLine($"Username (custom): {currentUser.Username}");
        Console.WriteLine($"Role (custom): {currentUser.Role}");
        Console.WriteLine($"Balance (custom): {currentUser.Balance:C}");
        Console.WriteLine($"CreatedAt (custom): {currentUser.CreatedAt}");
        Console.WriteLine($"Id (Identity): {currentUser.Id}");
        Console.WriteLine($"UserName (Identity): {currentUser.UserName}");
        Console.WriteLine($"Email (Identity): {currentUser.Email}");
        Console.WriteLine($"EmailConfirmed (Identity): {currentUser.EmailConfirmed}");
        Console.WriteLine($"PhoneNumber (Identity): {currentUser.PhoneNumber}");
        Console.WriteLine($"PhoneNumberConfirmed (Identity): {currentUser.PhoneNumberConfirmed}");
        Console.WriteLine($"TwoFactorEnabled (Identity): {currentUser.TwoFactorEnabled}");
        Console.WriteLine($"LockoutEnd (Identity): {currentUser.LockoutEnd}");
        Console.WriteLine($"LockoutEnabled (Identity): {currentUser.LockoutEnabled}");
        Console.WriteLine($"AccessFailedCount (Identity): {currentUser.AccessFailedCount}");
        Console.WriteLine($"SecurityStamp (Identity): {currentUser.SecurityStamp}");
        Console.WriteLine($"ConcurrencyStamp (Identity): {currentUser.ConcurrencyStamp}");
        Console.WriteLine($"NormalizedUserName (Identity): {currentUser.NormalizedUserName}");
        Console.WriteLine($"NormalizedEmail (Identity): {currentUser.NormalizedEmail}");
        Console.WriteLine("========================");
    }
    else
    {
        Console.WriteLine("No authenticated user found");
    }
}

<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookShare</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/coreui/dist/css/coreui.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookShare.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/book-logo.svg" alt="Book Logo" class="me-2" width="24" height="24" />
                    BookShare
                </a>
                <button class="navbar-toggler" type="button" data-coreui-toggle="collapse"
                    data-coreui-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if ((@currentUser?.Role.ToString() == "Administrator"))
                        {
                            
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-coreui-toggle="dropdown"
                                    aria-expanded="false">
                                    AdminPanel
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Books"
                                            asp-action="Manage">Books</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Categories"
                                            asp-action="Index">Categories</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Users"
                                            asp-action="Index">Users</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-coreui-toggle="dropdown"
                                    aria-expanded="false">
                                    Witaj, @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-area="Identity"
                                            asp-page="/Account/Manage/Index">Profil</a></li>
                                    <li>
                                        <hr class="dropdown-divider" />
                                    </li>
                                    <li>
                                        <form method="post" asp-area="Identity" asp-page="/Account/Logout" id="logoutForm">
                                            <button type="submit" class="dropdown-item">Wyloguj</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Zaloguj</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Zarejestruj</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BookShare - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/popperjs/dist/umd/popper.min.js"></script>
    <script src="~/lib/coreui/dist/js/coreui.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

