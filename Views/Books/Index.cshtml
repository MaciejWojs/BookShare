@model IEnumerable<BookShare.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Książki</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ISBN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ISBN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <span class="fw-bold text-primary">@Html.DisplayFor(modelItem => item.Price) PLN</span>
            </td>
            <td>
                <span class="@(item.StockQuantity > 0 ? "text-success" : "text-danger")">
                    @Html.DisplayFor(modelItem => item.StockQuantity)
                </span>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Szczegóły</a>
                
                @if (User.Identity.IsAuthenticated && item.StockQuantity > 0)
                {
                    <form asp-action="Purchase" asp-route-id="@item.Id" method="post" style="display: inline;" class="mt-1">
                        <button type="submit" class="btn btn-success btn-sm" onclick="return confirm('Czy na pewno chcesz kupić @item.Title za @item.Price PLN?')">
                            <i class="fas fa-shopping-cart"></i> Kup
                        </button>
                    </form>
                }
                else if (item.StockQuantity <= 0)
                {
                    <span class="text-muted">Niedostępne</span>
                }
                
                @if (User.IsInRole("Administrator"))
                {
                    <br/>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm mt-1">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm mt-1">Delete</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
