<div class="my-5"></div>
<div class="row mb-4">
    <div class="col-12">
        <h2>Featured Books</h2>
        <p class="lead">Discover our latest collection of books</p>
        <hr>
    </div>
</div>
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 pb-5">
    @if (Model != null && Model.Any())
    {
        @foreach (var book in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="https://marketplace.canva.com/EAFGDY5XrAQ/1/0/1003w/canva-yellow-black-minimal-simple-vibrant-happiness-book-cover-XrI0Rb4wZaI.jpg" 
                         class="card-img-top" alt="@book.Title cover" style="height: 300px; object-fit: cover;" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@book.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">by @book.Author</h6>
                        @if (book.Category != null)
                        {
                            <span class="badge bg-secondary mb-2">@book.Category.Name</span>
                        }
                        <p class="card-text flex-grow-1">
                            @if (!string.IsNullOrEmpty(book.Description))
                            {
                                @(book.Description.Length > 100 ? book.Description.Substring(0, 100) + "..." : book.Description)
                            }
                            else
                            {
                                <em>No description available</em>
                            }
                        </p>
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <strong class="text-success">@book.Price.ToString("C")</strong>
                                <small class="text-muted">@book.StockQuantity in stock</small>
                            </div>
                            <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id" 
                               class="btn btn-primary w-100">View Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info text-center">
                <h4>No books available</h4>
                <p>There are currently no books in our catalog. Please check back later!</p>
                @if (User.IsInRole("Administrator"))
                {
                    <a asp-controller="Books" asp-action="Create" class="btn btn-primary">Add New Book</a>
                }
            </div>
        </div>
    }
</div>

<div class="mb-6 pb-6"></div>

