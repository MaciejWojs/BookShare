{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "dotnet",
			"task": "build",
			"group": "build",
			"dependsOn": "dotnet clean",
			"problemMatcher": [],
			"label": "dotnet: build"
		},
		{
			"type": "shell",
			"command": "dotnet",
			"dependsOn": "dotnet: build",
			"args": [
				"run",
				"${workspaceFolder}"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "dotnet run"
		},
		{
			"type": "shell",
			"command": "dotnet",
			"args": [
				"clean",
				"${workspaceFolder}"
			],
			"group": "build",
			"label": "dotnet clean"
		},

		{
			"type": "shell",
			"command": "dotnet",
			"args": [
				"watch",
				"${workspaceFolder}"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "dotnet watch"
		}
	]
}