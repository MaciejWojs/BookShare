@page
@model BalanceModel
@{
    ViewData["Title"] = "Wallet";
    ViewData["ActivePage"] = ManageNavPages.Balance;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-wallet"></i> Current Balance
                </h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <span class="h4 mb-0">Your Balance:</span>
                    <span class="h3 mb-0 text-success">@Model.CurrentBalance.ToString("F2") PLN</span>
                </div>
                
                <form method="post" asp-page-handler="AddBalance">
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg" onclick="return confirm('Add 100 PLN to your account?')">
                            <i class="fas fa-plus"></i> Add 100 PLN
                        </button>
                    </div>
                </form>
                
                <hr class="my-4">
                
                <div class="text-muted">
                    <h6>About your wallet:</h6>
                    <ul class="small">
                        <li>Use your balance to purchase books from our store</li>
                        <li>Your balance is safely stored and updated in real-time</li>
                        <li>This demo allows you to add 100 PLN at a time for testing purposes</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>