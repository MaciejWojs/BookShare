@page
@model YourBooksModel
@{
    ViewData["Title"] = "Your Books";
    ViewData["ActivePage"] = ManageNavPages.YourBooks;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-12">
        @if (Model.UserBooks.Any())
        {
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-book"></i> Your Library (@Model.UserBooks.Count books)
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var userBook in Model.UserBooks)
                        {
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h6 class="card-title">@userBook.Book.Title</h6>
                                        <p class="card-text">
                                            <strong>Author:</strong> @userBook.Book.Author<br>
                                            <strong>ISBN:</strong> @userBook.Book.ISBN<br>
                                            <strong>Category:</strong> @(userBook.Book.Category?.Name ?? "No category")<br>
                                            <strong>Price:</strong> <span class="text-success">@userBook.Book.Price.ToString("F2") PLN</span>
                                        </p>
                                        @if (!string.IsNullOrEmpty(userBook.Book.Description))
                                        {
                                            <p class="card-text">
                                                <small class="text-muted">
                                                    @(userBook.Book.Description.Length > 100 ? userBook.Book.Description.Substring(0, 100) + "..." : userBook.Book.Description)
                                                </small>
                                            </p>
                                        }
                                    </div>
                                    <div class="card-footer text-muted">
                                        <small>
                                            <i class="fas fa-calendar"></i> Acquired: @userBook.AcquiredAt.ToString("dd/MM/yyyy")
                                            @if (!string.IsNullOrEmpty(userBook.Notes))
                                            {
                                                <br><i class="fas fa-info-circle"></i> @userBook.Notes
                                            }
                                        </small>
                                        <div class="mt-2">
                                            <a href="/Books/Details/@userBook.BookId" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i> View Details
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-body text-center py-5">
                    <i class="fas fa-book-open fa-3x text-muted mb-3"></i>
                    <h5>No books in your library yet</h5>
                    <p class="text-muted">
                        Start building your digital library by purchasing books from our store.
                    </p>
                    <a href="/Books" class="btn btn-primary">
                        <i class="fas fa-shopping-cart"></i> Browse Books
                    </a>
                </div>
            </div>
        }
    </div>
</div>

@if (Model.UserBooks.Any())
{
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-chart-bar"></i> Library Statistics
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3">
                            <div class="border-end">
                                <h4 class="text-primary">@Model.UserBooks.Count</h4>
                                <small class="text-muted">Total Books</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="border-end">
                                <h4 class="text-success">@Model.TotalSpent.ToString("F2") PLN</h4>
                                <small class="text-muted">Total Spent</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="border-end">
                                <h4 class="text-info">@Model.CategoriesCount</h4>
                                <small class="text-muted">Categories</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <h4 class="text-warning">@Model.RecentPurchases</h4>
                            <small class="text-muted">Recent (30 days)</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}